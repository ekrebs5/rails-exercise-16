<h1>Authors#index</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to "Destroy", author_path(author),
        data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to "Add author", new_author_path %>
